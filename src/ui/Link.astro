---
interface Props {
    href:string,
    bg:string,
    underlineBg:string,
    class?:string
}

const { bg,href,underlineBg,class:className } = Astro.props as Props;
---
<a href={href} class={`isolate relative group ${className}`}>
	<div
		class={`${bg || "bg-slate-300"} absolute inset-0 -z-10 block transition-transform duration-300 scale-x-0 group-hover:scale-x-100 group-hover:origin-bottom-left origin-bottom-right`}
	>
	</div>
	    <slot/>
	<div
		class={`${underlineBg || "bg-slate-900"} absolute right-[0.05em] bottom-0 left-[0.05em] -z-10 block transition-transform duration-300 scale-x-100 group-hover:scale-x-0 group-hover:origin-bottom-right origin-bottom-left h-[2px]`}
	>
	</div>
</a>
